<configuration>

    <property>
        <name>dfs.nameservices</name>
        <value>hdfs2</value>
    </property>
    <property>
        <name>dfs.ha.namenodes.hdfs2</name>
        <value>nn1</value>
    </property>
    <property>
        <name>dfs.namenode.rpc-address.hdfs2.nn1</name>
        <value>hdfs2_namenode_host:9000</value>
    </property>

    <property>
        <name>dfs.nameservices</name>
        <value>hdfs3</value>
    </property>
    <property>
        <name>dfs.ha.namenodes.hdfs3</name>
        <value>nn1</value>
    </property>
    <property>
        <name>dfs.namenode.rpc-address.hdfs3.nn1</name>
        <value>hdfs3_namenode1_host:9000</value>
    </property>


    <!-- 设置副本数 -->
    <property>
        <name>dfs.replication</name>
        <value>3</value>
    </property>

    <!-- HDFS文件块大小 -->
    <property>
        <name>dfs.blocksize</name>
        <value>134217728</value> <!-- 128 MB -->
    </property>

</configuration>
